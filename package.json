{
  "name": "@drarzter/kafka-client",
  "version": "0.5.0",
  "description": "Type-safe Kafka client wrapper for NestJS with typed topic-message maps",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.js"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "import": "./dist/testing.mjs",
      "require": "./dist/testing.js"
    },
    "./otel": {
      "types": "./dist/otel.d.ts",
      "import": "./dist/otel.mjs",
      "require": "./dist/otel.js"
    }
  },
  "typesVersions": {
    "*": {
      "core": [
        "./dist/core.d.ts"
      ],
      "testing": [
        "./dist/testing.d.ts"
      ],
      "otel": [
        "./dist/otel.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "kafka",
    "confluent",
    "librdkafka",
    "nestjs",
    "typescript",
    "typed-kafka",
    "kafka-client"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/drarzter/kafka-client"
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.ts --forceExit",
    "lint": "eslint src --fix",
    "format": "prettier --write src",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@confluentinc/kafka-javascript": "^1.8.0"
  },
  "peerDependencies": {
    "@nestjs/common": ">=10.0.0",
    "@nestjs/core": ">=10.0.0",
    "@opentelemetry/api": ">=1.0.0",
    "reflect-metadata": ">=0.1.13",
    "rxjs": ">=7.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/common": {
      "optional": true
    },
    "@nestjs/core": {
      "optional": true
    },
    "@opentelemetry/api": {
      "optional": true
    },
    "reflect-metadata": {
      "optional": true
    },
    "rxjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@opentelemetry/api": "^1.9.0",
    "@testcontainers/kafka": "^11.11.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "testcontainers": "^11.11.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
